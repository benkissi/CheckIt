<div class="table-bg1">
  <div class="form-content container">
    

    <!-- <div class="bg-opaq"> </div> -->
    <div class="table-pad">
    <%= render 'login' %>
      <h1>Listing products</h1>
      <table class="table table-back table-hover table-context table-bordered form-center " >
        <thead>
          <tr class="info ">
            <th>Product name</th>
            <th>Manufacturer</th>
            <th>Distributer</th>
            <th>Expiry date</th>
            <th>Manufacturing date</th>
            <th>Description</th>
            <th>Fda approved</th>
            <th>Gsa approved</th>
            <th>Image</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        
        <tbody>
          <% @products.each do |product| %>
            <tr>
              <td><%= product.product_name %></td>
              <td><%= product.manufacturer %></td>
              <td><%= product.distributer %></td>
              <td><%= product.expiry_date %></td>
              <td><%= product.manufacturing_date %></td>
              <td><%= product.description %></td>
              <td><%= product.fda_approved %></td>
              <td><%= product.gsa_approved %></td>
              <td><%= image_tag product.image.url(:medium)%></td>
              <td><%= link_to 'Show', product %></td>
              <td><%= link_to 'Edit', edit_product_path(product) %></td>
              <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>

          <% end %>

        </tbody>

      </table>
      
    </div>
    <%= button 'New Product', new_product_path %>
  </div>

</div>

